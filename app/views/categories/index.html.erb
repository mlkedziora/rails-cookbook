<h1>Cookbook</h1>

<div class="actions mb-4">
  <%= link_to "Add Category", new_category_path, class: "btn btn-primary" %>
</div>

<h2>Categories:</h2>

<div class="categories">
  <% @categories.each do |category| %>
    <div class="card">
      <h3><%= link_to category.name, category_path(category) %></h3>
    </div>
  <% end %>
</div>
