<h1>New Bookmark</h1>

<%= simple_form_for [@category, @bookmark] do |f| %>
  <%= f.association :recipe, collection: Recipe.all, prompt: "Choose a recipe" %>
  <%= f.input :comment %>
  <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Category", category_path(@category), class: "btn btn-secondary" %>
